# Enabling the URL rewriting engine
RewriteEngine On

# --- SÃ‰CURITY ---
RewriteRule ^data/ - [F,L]
RewriteRule ^core/ - [F,L]
RewriteRule ^\.env - [F,L]

# --- ROUTING (Front Controller) ---
# If the requested file is NOT an existing file (!-f)
RewriteCond %{REQUEST_FILENAME} !-f
# and is NOT an existing directory (!-d)
RewriteCond %{REQUEST_FILENAME} !-d
# then rewrite to index.php with url parameters appended
RewriteRule ^ index.php [QSA,L]